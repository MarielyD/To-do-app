<p id="notice"><%= notice %></p>

<h1 class="text-center">Tasks</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th class="lead">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Show', task %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_task_path(task) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default btn-lg btn-block"><%= link_to 'New Task', new_task_path %></button>
